		 POSSIBILITY OF SUCH DAMAGE.

		 SPDX-License-Identifier: BSD-3-Clause

		 The YANG module for the Filesystem monitoring configuration.";

	revision 2021-10-17 {
		description "Initial revision of version 1.";
	}

	grouping syslog-grp {
		container syslog {
			configd:help "Logging options.";
			description "Specify syslog level and facility to use for logging events.";
			leaf level {
				configd:help "Log level";
				description "Specify message log level.";
				type syslog:level;
				default "warning";
			}
			leaf facility {
				configd:help "Syslog facility to use.";
				description "Specify Syslog facility to use for messages.";
				type syslog:facility-no-all;
				default "daemon";
			}
		}
	}

	grouping monitor-fs-grp {
		list file-system {
			configd:help "Monitor File system.";
			description "Monitor the file system mounted at mountpoint every two
						 minutes, and generate logs on occurrence of file system events.";
			key "mountpoint";
			leaf mountpoint {
				configd:help "File system mount point.";
				description "File system mount point to monitor.";
				type string {
					length "1..1024";
					pattern "/|(/[^/]+)+" {
						error-message "Absolute directory path with no trailing '/'.";
					}
				}
			}

			container read-only-remount {
				configd:help "Monitor for read-only remount.";
				description "Monitor if the file system is remounted read only and generate a syslog message.";
				presence "Watch for read-only-remount.";
				uses syslog-grp;
			}

			container space-usage {
				configd:help "Monitor filesystem space usage.";
				description "Monitor filesystem space usage and generate syslog message
							 when the monitored conditions become true.";
				list threshold {
					description "List of thresholds to monitor. Emit a syslog message when the file
								 system usage percentage exceeds the threshold.";
					configd:help "Filesystem space usage percentage threshold.";
					ordered-by system;
					key "percent";
					leaf percent {
						configd:help "Percentage threshold.";
						description "Emit a syslog message when the file system usage percentage exceeds the threshold.";
						type system:percent;
					}
					uses syslog-grp;
				}
			}
		}
	}

	augment /system:system/storage:storage {
		container monitor {
			configd:help "Storage Monitor.";
			description "Configuration for storage monitoring service.";
			uses monitor-fs-grp;
		}
	}
}
